<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatabaseSelectionActivity">

    <TextView
        android:id="@+id/firebaseRealDataBase"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:text="Real Time Database"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/firebaseDataStore"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/firebaseDataStore"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="Data Store"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firebaseRealDataBase"
        />
</androidx.constraintlayout.widget.ConstraintLayout>